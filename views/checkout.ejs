<%- include('partials/start') %>
<%- include('partials/navbar') %>

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/home">Home</a> 
                <span class="mx-2 mb-0">/</span><a href="/cart">Cart</a> 
                <span class="mx-2 mb-0">/</span> 
                <strong class="text-black">Checkout</strong>
            </div>
        </div>

        <div class="row">
 
            <!-- Your Order Section -->
            <div class="col-md-3"></div>
            <div class="col-md-6 justify-content-center">
                <h2 class="h3 mb-3 text-black">Your Order</h2>
                <div class="p-3 p-lg-5 border">
                    <div style="max-height: 200px; overflow-y: auto;">
                        <table class="table site-block-order-table mb-5">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (cart.length > 0) { %>
                                    <% cart.forEach(item => { %>
                                        <tr>
                                            <td><%= item.product_name %> <strong class="mx-2">x</strong> <%= item.quantity %></td>
                                            <td>$<%= item.product_total.toFixed(2) %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="2" class="text-center">No items in cart</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
            
                    <div class="row">
                        <h6 class="text-secondary font-weight-bold"><strong>Cart Subtotal:</strong></h6>
                        <p class="text-black">$<%= cart.reduce((acc, item) => acc + item.product_total, 0).toFixed(2) || 0 %></p>
                    </div>
                    <div class="row">
                        <h6 class="text-secondary font-weight-bold"><strong>Order Total:</strong></h6>
                        <p class="text-black font-weight-bold"><strong>$<%= cart.reduce((acc, item) => acc + item.product_total, 0).toFixed(2) || 0 %></strong></p>
                    </div>
                    <div class="p-3 mb-5">
                        <select name="payment_method" id="payment_method" class="form-control">
                            <option value="Cash On Delivery">Cash on Delivery</option>
                            <option value="E-wallet">E-Wallet</option>
                            <option value="Bank">Bank Transfer</option>
                            <option value="Credit-card">Credit/Debit Card</option>
                            <option value="Home Credit">Home Credit</option>
                            <option value="Loan Sa Card">Loan Sa Card</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-lg py-3 btn-block" onclick="window.location='thankyou.html'">Place Order</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
<%- include('partials/end') %>
